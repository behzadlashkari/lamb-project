{% extends 'base.html.twig' %}

{% block theme 'admin-projects' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-xs-12 col-sm-12">
                <div class="pull-right" style="margin-bottom: 10px; margin-top: 20px;">
                    <a href="{{ path('admin_project_new') }}" class="btn btn-primary pull-right">Add <span class="fa fa-plus-circle"></span></a>
                </div>

                <h1>Projects</h1>

                <table class="table table-striped">
                    <tr>
                        <th>Project title</th>

                        <th>Edit</th>
                    </tr>
                    {% for project in projects %}
                        <tr>
                            <td><a href="{{ path('project_individual',{'title':project.title}) }}">{{ project.title }}</a></td>

                            <td>
                                <a href="{{ path('admin_project_edit', {'id': project.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}