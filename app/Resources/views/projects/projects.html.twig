{% extends 'main.html.twig' %}

{% block theme 'projects' %}

{% block body %}
    <div class="projects-wrapper">
    {% for project in projects %}

            <div class="container">
                <div class="project">
                    <div class="project-inner-wrapper">
                        <a href="{{ path('project_individual',{'title':project.title}) }}">
                            <div class="image-wrapper">
                                <img src="{{ asset('images/projects/' ~ project.listingImage) }}">
                                <div class="title-wrapper">
                                    <h2>{{ project.title }}</h2>
                                    <h3>{{ project.strapline }}</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

    {% endfor %}
    </div>
{% endblock %}
